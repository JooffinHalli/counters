{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "ES2022",
    "rootDir": "./src", 
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "shared/*": ["./shared/*"]
    },
    "outDir": "./public",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
